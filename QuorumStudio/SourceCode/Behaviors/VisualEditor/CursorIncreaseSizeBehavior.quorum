package Libraries.Development.Environment.Studio.Behaviors

use Libraries.Interface.Events.BehaviorEvent
use Libraries.Interface.Controls.Scenes.SceneEditor_LIBRARY

class CursorIncreaseSizeBehavior is QuorumStudioBehavior

    action Run(BehaviorEvent event)
        if event:GetItem() is SceneEditor_LIBRARY
            SceneEditor_LIBRARY controller = cast(SceneEditor_LIBRARY, event:GetItem())
            controller:GetCursor():IncreaseSize()
        end        
    end

end