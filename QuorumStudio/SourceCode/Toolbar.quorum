package Libraries.Interface
use Libraries.Interface.Layouts.Layout
use Libraries.Interface.Layouts.FlowLayout

class Toolbar is Item2D
    Layout layout = undefined

    on create
        FlowLayout flow
        layout = flow
    end

    action GetInterfaceLayout returns Layout
        return layout
    end

    action SetInterfaceLayout(Layout layout)
        me:layout = layout
    end


    action Resize
        parent:Libraries.Interface.Item2D:Resize()
        layout:Layout(me)
    end
end